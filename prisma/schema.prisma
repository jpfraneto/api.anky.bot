// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  fid           String   @unique
  username      String?
  displayName   String?
  pfpUrl        String?
  gifPfpUrl     String?

  // Relationships
  streams       Stream[]
  subscriptions Subscription[] @relation("Subscriber")
  subscribers   Subscription[] @relation("Streamer")
}

model Stream {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  startedAt DateTime?
  endedAt   DateTime?
  title     String
  status    StreamStatus @default(SCHEDULED)

  // Relationships
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Subscription {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relationships
  subscriber    User     @relation("Subscriber", fields: [subscriberId], references: [id])
  subscriberId  String
  streamer      User     @relation("Streamer", fields: [streamerId], references: [id])
  streamerId    String

  @@unique([subscriberId, streamerId])
  @@index([streamerId])
}

enum StreamStatus {
  SCHEDULED
  LIVE
  ENDED
}